{
  "name": "@wopr-network/wopr-plugin-matrix",
  "version": "1.0.0",
  "description": "Matrix channel plugin for WOPR - Enables AI conversations in Matrix rooms with E2EE support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "lint": "biome check --config-path=. src/",
    "lint:fix": "biome check --config-path=. --fix src/",
    "format": "biome format --config-path=. --write src/",
    "check": "biome check --config-path=. src/ && tsc --noEmit",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["wopr", "plugin", "matrix", "bot", "ai", "e2ee"],
  "author": "WOPR",
  "license": "MIT",
  "dependencies": {
    "@wopr-network/plugin-types": "^0.2.1",
    "matrix-bot-sdk": "^0.7.0",
    "winston": "^3.19.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/node": "^25.2.3",
    "@vitest/coverage-istanbul": "^4.0.18",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": ["dist"]
}
